extends layout

block content
  main
    section(class="section-hero")
      div(class="container")
        div(class="hero-box u-margin-top-large u-margin-bottom-medium")
          div(class="row")
            div(class="col-2-of-3")
              h1(class="hero-box__heading") #{heroText}
              div(class="row")
                div(class="col-1-of-2 u-margin-top-small")
                  a(class="hero-box__link", href="/") Let's work together
                div(class="col-1-of-2 u-margin-top-small")
                  a(class="hero-box__link", href="/") See my work
            div(class="col-1-of-3")
              div(class="hero-box__image")
                img(src=heroImageSrc, alt=heroImageAlt)
        
        p #{aboutMeText}